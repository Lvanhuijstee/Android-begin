<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/kemphaan1" />


    <View
        android:id="@+id/tint"
        android:layout_below="@id/kemphaan"
        android:visibility="gone"
        android:background="#D21B1919"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true" />

    <TextView
        android:textSize="20sp"
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="272dp"
        android:text="@string/DeKemphaan"
        android:textColor="#FFFFFF"
        android:visibility="gone"
        android:layout_centerVertical="true"/>


    <TextView
        android:id="@+id/kemphaan"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23sp"
        android:text="De kemphaan" />

    <Button
        android:layout_centerVertical="true"
        android:id="@+id/informatie"
        android:text="informatie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="informatie"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/home2"
        android:text="home"
        android:onClick="home2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/informatie2"
        android:text="sluiten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="sluiten"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/secondPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="0dp"
        android:onClick="secondPage"
        android:text=">"
        android:textSize="20sp" />


</RelativeLayout>