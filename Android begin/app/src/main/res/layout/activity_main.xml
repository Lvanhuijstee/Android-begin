<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_alignParentTop="true"
        android:scaleType="center"
        android:src="@drawable/blue" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="253dp"
        android:layout_below="@id/header"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@drawable/camera" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_below="@id/naam"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="34dp"
        android:layout_toRightOf="@id/mail"
        android:src="@drawable/klok" />

    <ImageView
        android:id="@+id/telefoon"
        android:layout_width="43dp"
        android:layout_height="46dp"
        android:layout_below="@id/mail"
        android:layout_marginTop="26dp"
        android:scaleType="centerCrop"
        android:src="@drawable/tele" />

    <ImageView
        android:id="@+id/mailic"
        android:layout_width="43dp"
        android:layout_height="42dp"
        android:layout_below="@id/naam"
        android:layout_marginTop="32dp"
        android:src="@drawable/mail" />

    <ImageView
        android:id="@+id/locatie"
        android:layout_width="45dp"
        android:layout_height="59dp"
        android:layout_below="@id/telefoon"
        android:layout_marginTop="13dp"
        android:scaleType="centerCrop"
        android:src="@drawable/locatie" />

    <TextView
        android:id="@+id/naam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img"
        android:layout_marginTop="9dp"
        android:layout_centerInParent="true"
        android:text="bedrijf naam...."
        android:textSize="30sp" />

    <TextView
        android:id="@+id/mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/naam"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="37dp"
        android:layout_toRightOf="@id/mailic"
        android:text="bedrijf@example"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/nummer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mail"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="36dp"
        android:layout_toRightOf="@id/telefoon"
        android:text="0612345678"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nummer"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="38dp"
        android:layout_toRightOf="@id/locatie"
        android:text="stad,straat,nummer"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tijden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/naam"
        android:layout_marginLeft="73dp"
        android:layout_marginTop="39dp"
        android:layout_toRightOf="@id/mail"
        android:text="0:00 - 24:00"
        android:textSize="20sp" />


</RelativeLayout>